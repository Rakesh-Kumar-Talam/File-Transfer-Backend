# Environment Configuration

# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/secure-file-transfer
# OR for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/secure_file_transfer

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=5m
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRY=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Pinata (IPFS)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-api-key
PINATA_JWT=your-pinata-jwt-token

# Blockchain (Polygon)
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137
CONTRACT_ADDRESS=0x...
PRIVATE_KEY=your-deployer-private-key-for-backend-transactions

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_2FA_SECRET=your-2fa-secret

# Security
CORS_ORIGIN=http://localhost:5173
SESSION_SECRET=your-session-secret-change-this
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=104857600
CHUNK_SIZE=1048576

# Logging
LOG_LEVEL=info
